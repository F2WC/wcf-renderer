{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "sdk",
  "projectType": "library",
  "root": "packages/sdk",
  "sourceRoot": "packages/sdk/src",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "continuous": true,
      "options": {
        "cwd": "packages/sdk",
        "command": "npm run dev"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/sdk",
        "command": "npm run build"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/sdk",
        "command": "npm run test"
      }
    }
  }
}
