{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "shell-app",
  "projectType": "application",
  "root": "playground/shell",
  "sourceRoot": "playground/shell/src",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "continuous": true,
      "dependsOn": [
        {
          "projects": ["shell-package"],
          "target": "dev"
        }
      ],
      "options": {
        "cwd": "playground/shell",
        "command": "npm run dev -- --strictPort --port 5173"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "projects": ["shell-package"],
          "target": "build"
        }
      ],
      "options": {
        "cwd": "playground/shell",
        "command": "npm run build"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "playground/shell",
        "command": "npm run lint:script"
      }
    }
  }
}
